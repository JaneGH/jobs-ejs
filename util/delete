class PersonalizationComponentWidget extends StatefulWidget {
  const PersonalizationComponentWidget({
    super.key,
    this.favoriteMusic,
    bool? isDisabled,
    this.likeToDoInCar,
    this.okWithInTheCar,
    this.luggageNeeds,
    this.genderPreference,
    this.callback,
  }) : isDisabled = isDisabled ?? false;

  final List<String>? favoriteMusic;
  final bool isDisabled;
  final List<String>? likeToDoInCar;
  final List<String>? okWithInTheCar;
  final List<String>? luggageNeeds;
  final List<String>? genderPreference;
  final Future Function(
      PersonalizationDetailDtoStruct? personalizationDetailDto)? callback;

  @override
  State<PersonalizationComponentWidget> createState() =>
      _PersonalizationComponentWidgetState();
}

